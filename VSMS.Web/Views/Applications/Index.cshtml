@model IEnumerable<VSMS.Web.Models.Application>

@{
    ViewData["Title"] = "Applications";
}

<h1>Opportunity Applications</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubmissionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volunteer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opportunity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubmissionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Volunteer!.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opportunity!.Location)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AppId">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.AppId">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.AppId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
