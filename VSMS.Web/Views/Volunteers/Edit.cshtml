@model VSMS.Web.ViewModels.VolunteerSkillViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Volunteer</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Volunteer.UserId" />
            
            <div class="form-group mb-3">
                <label asp-for="Volunteer.Name" class="control-label"></label>
                <input asp-for="Volunteer.Name" class="form-control" />
                <span asp-validation-for="Volunteer.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Volunteer.PhoneNumber" class="control-label"></label>
                <input asp-for="Volunteer.PhoneNumber" class="form-control" />
                <span asp-validation-for="Volunteer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Volunteer.TotalHours" class="control-label"></label>
                <input asp-for="Volunteer.TotalHours" class="form-control" />
                <span asp-validation-for="Volunteer.TotalHours" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Volunteer.Email" class="control-label"></label>
                <input asp-for="Volunteer.Email" class="form-control" />
                <span asp-validation-for="Volunteer.Email" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label fw-bold">Select Skills:</label>
                <div class="card p-3">
                    @foreach (var skill in Model.AvailableSkills)
                    {
                        var isChecked = Model.SelectedSkillIds.Contains(skill.SkillId) ? "checked" : "";
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedSkillIds" value="@skill.SkillId" id="skill_@skill.SkillId" @isChecked />
                            <label class="form-check-label" for="skill_@skill.SkillId">
                                @skill.Name (@skill.Category)
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mb-5">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
