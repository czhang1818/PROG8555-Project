@model VSMS.Web.ViewModels.VolunteerSkillViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Volunteer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.TotalHours)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.TotalHours)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.CreatedAt)
        </dd>
        
        <dt class="col-sm-2">
            Skills
        </dt>
        <dd class="col-sm-10">
            @if (Model.SelectedSkillIds.Any())
            {
                <ul>
                    @foreach (var skillId in Model.SelectedSkillIds)
                    {
                        var skill = Model.AvailableSkills.FirstOrDefault(s => s.SkillId == skillId);
                        if (skill != null)
                        {
                            <li>@skill.Name (@skill.Category)</li>
                        }
                    }
                </ul>
            }
            else
            {
                <span>None</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.Volunteer.UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index">Back to List</a>
    </form>
</div>
